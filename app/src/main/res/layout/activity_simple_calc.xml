<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.example.android.mycalc.SimpleCalc"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/_divide"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/_multiplicate"
        android:layout_toEndOf="@+id/_button8"
        android:layout_toRightOf="@+id/_button8"
        android:onClick="onClickOperator"
        android:text="/" />

    <Button
        android:id="@+id/_equals"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/_multiplicate"
        android:layout_toRightOf="@+id/_divide"
        android:onClick="onClickEquals"
        android:text="=" />

    <Button
        android:id="@+id/_button7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/_button4"
        android:onClick="onClickNumber"
        android:text="7" />

    <Button
        android:id="@+id/_multiplicate"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/_minus"
        android:layout_toEndOf="@+id/_divide"
        android:layout_toRightOf="@+id/_divide"
        android:onClick="onClickOperator"
        android:text="*" />

    <Button
        android:id="@+id/_button8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/_button6"
        android:layout_toEndOf="@+id/_buttonC"
        android:layout_toRightOf="@+id/_buttonC"
        android:onClick="onClickNumber"
        android:text="8" />

    <Button
        android:id="@+id/_button6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/_plus"
        android:layout_toEndOf="@+id/_button2"
        android:layout_toRightOf="@+id/_button2"
        android:onClick="onClickNumber"
        android:text="6" />

    <Button
        android:id="@+id/_button4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/_button1"
        android:onClick="onClickNumber"
        android:text="4" />

    <Button
        android:id="@+id/_minus"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/_plus"
        android:layout_toRightOf="@+id/_button3"
        android:onClick="onClickOperator"
        android:text="-" />

    <Button
        android:id="@+id/_button5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/_button2"
        android:layout_toEndOf="@+id/_button1"
        android:layout_toRightOf="@+id/_button1"
        android:onClick="onClickNumber"
        android:text="5" />

    <Button
        android:id="@+id/_button2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/_WorkField"
        android:layout_toEndOf="@+id/_button4"
        android:layout_toRightOf="@+id/_button4"
        android:onClick="onClickNumber"
        android:text="2" />

    <Button
        android:id="@+id/_plus"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/_WorkField"
        android:layout_toRightOf="@+id/_button3"
        android:onClick="onClickOperator"
        android:text="+" />

    <Button
        android:id="@+id/_button1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/_WorkField"
        android:onClick="onClickNumber"
        android:text="1" />

    <Button
        android:id="@+id/_button3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/_WorkField"
        android:layout_toEndOf="@+id/_button2"
        android:layout_toRightOf="@+id/_WorkField"
        android:linksClickable="false"
        android:onClick="onClickNumber"
        android:text="3" />

    <Button
        android:id="@+id/_buttonZero"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/_button8"
        android:layout_toEndOf="@+id/_buttonC"
        android:layout_toRightOf="@+id/_buttonC"
        android:onClick="onClickNumber"
        android:text="0" />

    <Button
        android:id="@+id/_buttonC"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/_button7"
        android:onClick="onClickClear"
        android:text="C" />

    <TextView
        android:id="@+id/_WorkField"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/_button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/_divide"
        android:layout_below="@+id/_button6"
        android:layout_toEndOf="@+id/_button8"
        android:layout_toRightOf="@+id/_button8"
        android:onClick="onClickNumber"
        android:text="9" />

</android.widget.RelativeLayout>
